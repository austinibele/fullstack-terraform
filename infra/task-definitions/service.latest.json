{
  "family": "task-definition-node",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::349514606126:role/Policy-Ecs-Execution-Role",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "nginx:latest",
      "memoryReservation": 512,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/node-app-prod",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs-frontend"
        }
      },
      "secrets": []
    },
    {
      "name": "backend",
      "image": "nginx:latest",
      "memoryReservation": 512,
      "portMappings": [
        {
          "containerPort": 5252,
          "hostPort": 5252
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "5252"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/node-app-prod",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs-backend"
        }
      },
      "secrets": []
    }
  ]
}